#!/usr/bin/env bash
set -e

LOG_FORMAT="- %s (#%h)"

function write_log() {
  git log --pretty=format:"$LOG_FORMAT" --no-merges --grep "README.md" --invert-grep "$1" | grep -v "release: " >> CHANGELOG.md
}

function clear_changelog() {
  if [[ ! -f ./CHANGELOG.md ]]; then
    touch CHANGELOG.md
  fi
  echo -e "# Changelog\n" > CHANGELOG.md
  echo -e "This changelog is automatically generated.\n" >> CHANGELOG.md
}


function write_changelog() {
  local tag previous_tag
  N=0
  # On first run, just get the first tag and print it as header.
  # On consecutive runs, diff tag with previous_tag, then print
  # tag as header for the next run.
  # On completion, diff the last tag with <epmty> to catch all
  # commits before first tag.
  for tag in $(git tag --sort "-v:refname"); do
    if [ "$N" -gt 0 ]; then
      # git log --pretty=format:"$LOG_FORMAT" --no-merges --grep "README.md" --invert-grep "$tag...$previous_tag" | grep -v "release: " >> CHANGELOG.md
      write_log "$tag...$previous_tag"
      echo -e "\n## $tag\n" >> CHANGELOG.md
    else
      echo -e "## $tag\n" >> CHANGELOG.md
    fi
    previous_tag="$tag"
    (( N+=1 ))
  done
  # git log --pretty=format:"$LOG_FORMAT" --no-merges --grep "README.md" --grep "CHANGELOG.md" --invert-grep "$tag..." | grep -v "release: " >> CHANGELOG.md
  write_log "$tag..."
}

function commit_changelog() {
  git add ./CHANGELOG.md
  git commit -m "Update CHANGELOG.md"
}

function main() {
  clear_changelog
  write_changelog
  commit_changelog
}

main
